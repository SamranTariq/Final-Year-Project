<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/line"
    android:orientation="vertical"
    tools:context=".signin">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="149dp"
            android:layout_marginRight="149dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="SIGN IN"
            android:textColor="#BFFFFFFF"
            android:textSize="49dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/progressbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="260dp"
        android:layout_marginRight="260dp"
        android:text="Credentials."
        android:textColor="#BFFFFFFF"
        android:textSize="19dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="28dp"

        android:layout_marginEnd="258dp"
        android:layout_marginRight="258dp"
        android:text="YOUR EMAIL"
        android:textColor="#BFFFFFFF"
        android:textSize="21dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/emaillogin"
        android:layout_width="349dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittextstyle2"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:paddingTop="7dp"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="268dp"
        android:layout_marginRight="268dp"
        android:text="PASSWORD"
        android:textColor="#BFFFFFFF"
        android:textSize="21dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emaillogin" />

    <EditText
        android:id="@+id/passwordhideshow"
        android:layout_width="349dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittextstyle2"
        android:ems="10"
        android:gravity="start"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingTop="7dp"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <CheckBox
        android:id="@+id/show_hide_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="230dp"
        android:layout_marginRight="230dp"
        android:buttonTint="#FFFFFF"
        android:text="SHOW PASSWORD"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordhideshow" />

    <Button
        android:id="@+id/startfragment"
        android:layout_width="347dp"
        android:layout_height="54dp"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/buttonstyle"
        android:fontFamily="@font/aldrich"
        android:text="LOG IN"
        android:textColor="#303030"
        android:textSize="38dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_hide_password" />

    <Button
        android:id="@+id/startfigerprint"
        android:layout_width="186dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:alpha="0.7"
        android:background="@drawable/buttonfingerstyle"
        android:text="FINGERPRINT LOG IN"
        android:textColor="#101010"
        android:textSize="18dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/startfragment"
        app:layout_constraintTop_toBottomOf="@+id/startfragment" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/audiowide"
        android:text="IF YOU......"
        android:textColor="#BFFFFFFF"
        android:textSize="15dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/startfragment"
        app:layout_constraintTop_toBottomOf="@+id/startfigerprint" />

    <Button
        android:id="@+id/startsignup"
        android:layout_width="338dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/donthaveaccount"
        android:fontFamily="@font/amiko"
        android:gravity="top"
        android:text="    DON'T HAVE ACCOUNT?"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/startfigerprint"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/startforgetpassword"
        android:layout_width="338dp"
        android:layout_height="25dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/donthaveaccount"
        android:fontFamily="@font/amiko"
        android:gravity="top"
        android:text="    FORGET PASSWORD?"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/startsignup"
        app:layout_constraintStart_toStartOf="@+id/startsignup"
        app:layout_constraintTop_toBottomOf="@+id/startsignup" />

    <Button
        android:id="@+id/termandservice"
        android:layout_width="158dp"
        android:layout_height="19dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/term"
        android:gravity="bottom"
        android:text="Terms of Services"
        android:textColor="#F5FFFFFF"
        android:textSize="13dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/startforgetpassword"
        app:layout_constraintTop_toBottomOf="@+id/startforgetpassword" />

    <Button
        android:id="@+id/privacypolices"
        android:layout_width="141dp"
        android:layout_height="14dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/term"
        android:gravity="top"
        android:text="Privacy Policy"
        android:textColor="#F5FFFFFF"
        android:textSize="12dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/termandservice"
        app:layout_constraintTop_toBottomOf="@+id/termandservice" />

    <Button
        android:id="@+id/whatis"
        android:layout_width="218dp"
        android:layout_height="24dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/donthaveaccount"
        android:fontFamily="@font/aldrich"
        android:gravity="top"
        android:text="  WHAT IS OWNER?"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/privacypolices"
        app:layout_constraintTop_toBottomOf="@+id/privacypolices"
        app:layout_constraintVertical_bias="0.0" />

        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:layout_marginBottom="93dp"
            android:background="@drawable/popupprogress"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/emaillogin"
            app:layout_constraintEnd_toEndOf="@+id/emaillogin"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="104dp"
        android:alpha="0.7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/whatis"
        app:layout_constraintTop_toBottomOf="@+id/startforgetpassword"
        app:srcCompat="@drawable/lunchericon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

